# ==============================================
# N8N DASHBOARD BACKEND - ENVIRONMENT TEMPLATE
# ==============================================
# COPY THIS FILE TO .env AND FILL IN YOUR VALUES
# NEVER COMMIT THE .env FILE TO GIT!
# ==============================================

# ----------------------------------------------
# SERVER CONFIGURATION
# ----------------------------------------------
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# ----------------------------------------------
# DATABASE - NEON DB
# ----------------------------------------------
# Get your connection string from: https://neon.tech
DATABASE_URL=postgresql://your_user:your_password@your-host.neon.tech/your_database?sslmode=require

# ----------------------------------------------
# AUTHENTICATION & SECURITY
# ----------------------------------------------
# Generate a strong secret: openssl rand -hex 32
JWT_SECRET=your-super-secret-jwt-key-generate-with-openssl
JWT_EXPIRES_IN=12h
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# ----------------------------------------------
# USERS CONFIGURATION (CRITICAL - MUST BE ON ONE LINE)
# ----------------------------------------------
USERS=[{"username":"admin","password":"your-secure-password","email":"admin@yourdomain.com","plan":"enterprise"}]

# ----------------------------------------------
# ADMIN PANEL PASSWORD
# ----------------------------------------------
ADMIN_PANEL_PASSWORD=your-admin-panel-password

# ----------------------------------------------
# N8N CONFIGURATION
# ----------------------------------------------
N8N_BASE_URL=https://your-n8n-instance.com
N8N_API_KEY=your-n8n-api-key
N8N_WEBHOOK_DOMAIN_WHITELIST=https://your-n8n-instance.com

# ----------------------------------------------
# EMAIL SERVICE (Optional)
# ----------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

SUPPORT_EMAIL_ALI=support@yourdomain.com
SUPPORT_EMAIL_HASSAM_FAIZAN=support@yourdomain.com
SUPPORT_EMAIL_MUDASSIR_USMAN=support@yourdomain.com

# ----------------------------------------------
# CORS & SECURITY
# ----------------------------------------------
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com
ALLOWED_IPS=*

# ----------------------------------------------
# RATE LIMITING
# ----------------------------------------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=20
FORM_RATE_LIMIT_WINDOW_MS=3600000
FORM_RATE_LIMIT_MAX_REQUESTS=10

# ----------------------------------------------
# LOGGING
# ----------------------------------------------
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# ----------------------------------------------
# FRONTEND URL
# ----------------------------------------------
FRONTEND_URL=http://localhost:3000

# ----------------------------------------------
# WEBHOOK SECRET (Optional)
# ----------------------------------------------
WEBHOOK_SECRET=your-webhook-secret-key

# ==============================================
# AI CHATBOT CONFIGURATION (ZAPPY)
# ==============================================
# Each plan can use a different AI model.
# The user will NOT know which model is being used.
# ==============================================

# ----------------------------------------------
# GOOGLE GEMINI AI - PRIMARY PROVIDER
# ----------------------------------------------
# Get your API key from: https://aistudio.google.com/
GEMINI_API_KEY=your-gemini-api-key-here

# ----------------------------------------------
# ANTHROPIC CLAUDE - ENTERPRISE PROVIDER
# ----------------------------------------------
# Get your API key from: https://console.anthropic.com/
CLAUDE_API_KEY=your-anthropic-api-key-here

# ----------------------------------------------
# OPENAI GPT - ALTERNATIVE PROVIDER (Optional)
# ----------------------------------------------
# Get your API key from: https://platform.openai.com/
OPENAI_API_KEY=your-openai-api-key-here

# ==============================================
# MODEL CONFIGURATION PER PLAN
# ==============================================
# Set the model for each user plan tier.
# Users will see different AI personas based on their plan
# but won't know which underlying model is being used.
# ==============================================

# Free Tier Model (Gemini Flash - Fast & Free)
# Options: gemini-flash-latest, gemini-1.5-flash, gemini-2.0-flash-exp
MODEL_FREE=gemini-flash-latest
MODEL_FREE_PROVIDER=gemini

# Pro Tier Model (Better quality model)
# Options: gemini-1.5-pro, gemini-2.0-pro-exp, gpt-4o, gpt-4o-mini
MODEL_PRO=gemini-1.5-pro
MODEL_PRO_PROVIDER=gemini

# Enterprise Tier Model (Best quality model)
# Options: claude-3-5-sonnet-20241022, claude-3-opus-20240229, gpt-4o
MODEL_ENTERPRISE=claude-3-5-sonnet-20241022
MODEL_ENTERPRISE_PROVIDER=claude

# ----------------------------------------------
# MODEL SIMULATION MODE
# ----------------------------------------------
# When true: All plans use Gemini Flash but simulate different personas
# When false: Each plan uses its configured model/provider
MODEL_SIMULATION_MODE=true

# ----------------------------------------------
# MODEL FALLBACK CONFIGURATION
# ----------------------------------------------
# Enable/disable multi-model fallback
ENABLE_MODEL_FALLBACK=true

# Model priority order when primary fails (comma-separated)
MODEL_PRIORITY=gemini,openai,claude

# ----------------------------------------------
# CHATBOT BEHAVIOR SETTINGS
# ----------------------------------------------
# Enable response caching (reduces API costs)
ENABLE_RESPONSE_CACHE=true
CACHE_TTL_SECONDS=3600

# Maximum conversation history length
MAX_HISTORY_LENGTH=20

# Enable NLP preprocessing (intent detection, entity extraction)
ENABLE_NLP_PROCESSING=true

# Enable automatic training data refresh
ENABLE_TRAINING_DATA_REFRESH=true

# Maximum message length (characters)
MAX_MESSAGE_LENGTH=2000

# Streaming response chunk size (characters)
STREAM_CHUNK_SIZE=50

# ----------------------------------------------
# CHATBOT RATE LIMITING
# ----------------------------------------------
# Free tier limits
CHATBOT_FREE_HOURLY_LIMIT=20
CHATBOT_FREE_MINUTE_LIMIT=5

# Pro tier limits
CHATBOT_PRO_HOURLY_LIMIT=100
CHATBOT_PRO_MINUTE_LIMIT=20

# Enterprise tier (set to 0 for unlimited)
CHATBOT_ENTERPRISE_HOURLY_LIMIT=0
CHATBOT_ENTERPRISE_MINUTE_LIMIT=0

# Streaming request limits (separate from regular)
CHATBOT_STREAM_CONCURRENT_LIMIT=3

# ----------------------------------------------
# PERFORMANCE & MONITORING
# ----------------------------------------------
# Enable detailed chatbot logging
CHATBOT_LOGGING_ENABLED=true

# Track token usage and costs
TRACK_AI_COSTS=true

# Alert on high error rates (threshold percentage)
ERROR_RATE_ALERT_THRESHOLD=10

# Enable analytics collection
ENABLE_CHATBOT_ANALYTICS=true

# Model selection strategy (auto, plan-based, performance-based)
MODEL_SELECTION_STRATEGY=plan-based

# Timeout for AI API requests (milliseconds)
AI_API_TIMEOUT_MS=30000

# Retry attempts on failure
AI_API_RETRY_ATTEMPTS=2

# Exponential backoff base (milliseconds)
AI_API_RETRY_BACKOFF_MS=1000
